<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.example.verticaltextview.VerticalTextView
        android:id="@+id/verticalTextView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="#ffff00ff"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:paddingEnd="40dp"
        android:paddingBottom="40dp"
        android:text="Normal"
        android:textColor="@android:color/white"
        android:textSize="50sp"
        app:direction="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.example.verticaltextview.VerticalTextView
        android:id="@+id/verticalTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="#A79DA4"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:paddingEnd="40dp"
        android:paddingBottom="40dp"
        android:text="Top-down"
        android:textColor="@android:color/white"
        android:textSize="50sp"
        app:direction="top_down"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.example.verticaltextview.VerticalTextView
        android:id="@+id/verticalTextView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="#19E0C3"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:paddingEnd="40dp"
        android:paddingBottom="40dp"
        android:text="Upsidedown"
        android:textColor="@android:color/white"
        android:textSize="50sp"
        app:direction="upside_down"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.example.verticaltextview.VerticalTextView
        android:id="@+id/verticalTextView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="#ff00ff00"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:paddingEnd="40dp"
        android:paddingBottom="40dp"
        android:text="Bottom-up"
        android:textColor="@android:color/white"
        android:textSize="50sp"
        app:direction="bottom_up"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="that"
        app:layout_constraintBottom_toBottomOf="@+id/verticalTextView"
        app:layout_constraintEnd_toStartOf="@+id/verticalTextView"
        app:layout_constraintTop_toTopOf="@+id/verticalTextView" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="are right."
        app:layout_constraintBottom_toBottomOf="@+id/verticalTextView2"
        app:layout_constraintStart_toEndOf="@+id/verticalTextView2"
        app:layout_constraintTop_toTopOf="@+id/verticalTextView2" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="constraints"
        app:layout_constraintBottom_toTopOf="@+id/verticalTextView3"
        app:layout_constraintEnd_toEndOf="@+id/verticalTextView3"
        app:layout_constraintStart_toStartOf="@+id/verticalTextView3" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show"
        app:layout_constraintEnd_toEndOf="@+id/verticalTextView4"
        app:layout_constraintStart_toStartOf="@+id/verticalTextView4"
        app:layout_constraintTop_toBottomOf="@+id/verticalTextView4" />

</androidx.constraintlayout.widget.ConstraintLayout>